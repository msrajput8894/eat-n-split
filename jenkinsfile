pipeline {
    agent any

    environment {
        // Netlify credentials stored in Jenkins
        NETLIFY_AUTH_TOKEN = credentials('netlifytoken')
        NETLIFY_SITE_ID   = credentials('netlify-site-id')
        MAJOR = "1"
        MINOR = "0"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/msrajput8894/eat-n-split.git'
            }
        }

        stage('Generate Version') {
            steps {
                script {
                    def date = new Date()
                    def yy = date.format("yy")
                    def mm = date.format("MM")

                    // Calculate week of month
                    def week = ((date.date - 1) / 7 + 1).toInteger()

                    // Build number padded 5 digits
                    def num = String.format("%05d", env.BUILD_NUMBER.toInteger())

                    env.APP_VERSION = "${MAJOR}.${MINOR}.${yy}.${mm}.${week}.${num}"

                    echo "Generated Version: ${env.APP_VERSION}"
                }
            }
        }

        stage('Build') {
            steps {
                sh "npm install"         // for Node project
                sh "npm run build"       // adapt based on your project
            }
        }

        stage('Deploy to Netlify') {
            steps {
                sh """
                    curl -X POST \\
                    -H \"Authorization: Bearer $NETLIFY_AUTH_TOKEN\" \\
                    -H \"Content-Type: application/zip\" \\
                    --data-binary @./dist.zip \\
                    https://api.netlify.com/api/v1/sites/$NETLIFY_SITE_ID/deploys
                """
            }
        }
    }

    post {
        success {
            emailext (
                subject: "SUCCESS: Build #${BUILD_NUMBER} (${APP_VERSION})",
                body: """
                Hi Mahi,

                Your CI Pipeline executed successfully.

                Build No: ${BUILD_NUMBER}
                Version: ${APP_VERSION}
                Status: SUCCESS
                
                Regards,
                Jenkins
                """,
                to: "msrajput8894@example.com"
            )
        }
        failure {
            emailext (
                subject: "FAILED: Build #${BUILD_NUMBER} (${APP_VERSION})",
                body: """
                Hi Mahi,

                Your CI Pipeline FAILED.

                Build No: ${BUILD_NUMBER}
                Version: ${APP_VERSION}
                Status: FAILED

                Please review the logs.
                """,
                to: "msrajput8894@example.com"
            )
        }
    }
}
